<%= form_with model: curia do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% curia.errors.full_messages_for(:name).each do |message| %>

    <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
    <% curia.errors.full_messages_for(:location).each do |message| %>

    <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :date_created %><br>
    <%= form.date_field :date_created %>
    <% curia.errors.full_messages_for(:date_created).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
